{
    "root": true,
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "legacyDecorators": true
        },
        "sourceType": "module"
    },
    "env": {
        "node": true,
        "browser": true,
        "es6": true,
        "jest": true
    },
    "globals": {
        "__ENV__": true,
        "__DEV__": true,
        "__SERVER__": true,
        "__CHAT_ENV__": true,
        "wx": true,
        "Page": true,
        "Component": true,
        "getApp": true,
        "App": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "curly": "error",
        "semi": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-debugger": "off",
        "generator-star-spacing": "off",
        "no-console": [
            "error",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "radix": "off",
        "no-new": "off",
        "no-use-before-define": "off",
        "prefer-reflect": "off",
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1
            }
        ],
        "arrow-body-style": [
            "error",
            "as-needed"
        ],
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "padded-blocks": [
            "error",
            {
                "classes": "always"
            }
        ],
        "max-params": "off",
        "no-var": "error",
        "quotes": [
            "error",
            "double"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "comma-dangle": [
            "error",
            "always-multiline",
            {
                "functions": "never"
            }
        ],
        "operator-linebreak": [
            "error",
            "after"
        ],
        "prefer-const": [
            "error",
            {
                "destructuring": "any"
            }
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ]
    }
}
